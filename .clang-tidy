Checks: >
  -*,
  clang-analyzer-*,
  bugprone-*,
  cppcoreguidelines-*,
  performance-*,
  readability-*,
  modernize-*,
  misc-*,
  portability-*,
  google-*,
  -google-readability-function-size,
  -modernize-use-trailing-return-type,
  -readability-identifier-naming,
  -cppcoreguidelines-avoid-magic-numbers,
  -cppcoreguidelines-macro-usage

WarningsAsErrors: >
  clang-analyzer-*

CheckOptions:
  # ------------------
  # Naming rules (explicit)
  # ------------------
  - key: readability-identifier-naming.ClassCase
    value: CamelCase
  - key: readability-identifier-naming.StructCase
    value: CamelCase
  - key: readability-identifier-naming.FunctionCase
    value: CamelCase
  - key: readability-identifier-naming.FunctionIgnoredRegexp
    value: '^(Get|Set)[A-Z]'
  - key: readability-identifier-naming.MemberCase
    value: camelBack
  - key: readability-identifier-naming.ParameterCase
    value: camelBack
  - key: readability-identifier-naming.ParameterSuffix
    value: _
  - key: readability-identifier-naming.GlobalConstantCase
    value: CamelCase
  - key: readability-identifier-naming.VariableCase
    value: camelBack

  # 이름 길이 제한 명확히 비활성화 (짧은 변수명 OK)
  - key: readability-identifier-naming.MinimumLength
    value: 0
  - key: readability-identifier-naming.MinimumIdentifierNameLength
    value: 0
  - key: readability-identifier-naming.IgnoreMainLikeFunctions
    value: 1

  # ------------------
  # Virtual destructor 명시
  # ------------------
  - key: cppcoreguidelines-explicit-virtual-functions.CheckExplicitVirtualDestructor
    value: 1

  # ------------------
  # const-return-type 규칙 명시
  # ------------------
  - key: readability-const-return-type.IgnoreMacros
    value: 0
  - key: readability-const-return-type.WarnOnConstReturn
    value: 1

  # ------------------
  # Header 내 정의 검사
  # ------------------
  - key: misc-definitions-in-headers.IgnoreHeaderFiles
    value: 0

  # ------------------
  # auto 사용 제한 완화
  # ------------------
  - key: modernize-use-auto.MinTypeNameLength
    value: 99

FormatStyle: file